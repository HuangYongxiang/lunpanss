<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="67dp">
        <TextView
            android:id="@+id/banner1"
            android:background="#3c3c3c"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="67dp">
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:onClick="goback"
                    android:clickable="true"
                    android:drawableLeft="@drawable/icon_back"
                    />
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="新闻"
                    android:layout_marginRight="50dp"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/rabtn1"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:button="@null"
                android:layout_marginRight="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:text="头条"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="社会"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="国内"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn4"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="国际"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn5"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="娱乐"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn6"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="体育"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn7"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="军事"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn8"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="科技"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn9"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="财经"
                android:textSize="18dp"/>
            <RadioButton
                android:id="@+id/rabtn10"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:button="@null"
                android:layout_marginLeft="1dp"
                android:textColor="@color/white"
                android:background="@drawable/selector_btn"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时尚"
                android:textSize="18dp"/>
        </RadioGroup>
    </HorizontalScrollView>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</LinearLayout>