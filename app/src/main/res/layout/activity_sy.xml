<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="242dp">
            <com.youth.banner.Banner
                android:id="@+id/banner1"
                android:background="@drawable/login_bj"
                android:layout_width="match_parent"
                android:layout_height="242dp"
                />
            <TextView
                android:id="@+id/info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="top|left"
                android:drawableTop="@drawable/users"/>
            <TextView
                android:id="@+id/tuichu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="top|right"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/tc"
                />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text="——快捷查询——"
            android:textColor="@color/black" />
        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:padding="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_tq"
                    android:text="查天气"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_xw"
                    android:text="查新闻"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textview5"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_kd"
                    android:text="查快递"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/textview6"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_sp"
                    android:text="查菜谱"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/textview7"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_kd"
                    android:text="录音采集"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/textview3"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_kd"
                    android:text="问卷调查"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/textview4"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/icon_kd"
                    android:text="标注任务"
                    android:gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="——最新公告——"
                android:textColor="@color/black" />
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpagers"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_margin="1dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/youxi"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textColor="@color/youxi"
                    android:textSize="20dp"
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/icon_button"
                    android:text="进入游戏"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>