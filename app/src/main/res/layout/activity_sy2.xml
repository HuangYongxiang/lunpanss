<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorG"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="242dp">
                <com.youth.banner.Banner
                    android:id="@+id/banner1"
                    android:background="@drawable/login_bj"
                    android:layout_width="match_parent"
                    android:layout_height="242dp"
                    />
                <TextView
                    android:id="@+id/info"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="top|left"
                    android:drawableTop="@drawable/users"/>
                <TextView
                    android:id="@+id/tuichu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="10dp"
                    android:drawableTop="@drawable/tc"
                    />
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:background="@drawable/chaxun"
                android:textColor="@color/black" />
            <HorizontalScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/tq"
                        android:gravity="center"
                        android:text="查天气" />

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:drawableTop="@drawable/xw"
                        android:text="查新闻"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:drawableTop="@drawable/kd"
                        android:text="查快递"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="90dp"
                        android:layout_height="70dp"
                        android:drawableTop="@drawable/search"
                        android:text="查菜谱"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textview7"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/icon_kd"
                        android:text="录音采集"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textview3"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/icon_kd"
                        android:text="问卷调查"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textview4"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:drawableTop="@drawable/icon_kd"
                        android:text="标注任务"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"/>
                </LinearLayout>
            </HorizontalScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="35dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:background="@drawable/zxgg"
                    android:textColor="@color/black" />
                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpagers"
                    android:layout_width="match_parent"
                    android:layout_height="138dp"
                    android:layout_gravity="center"
                    android:layout_margin="1dp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                />
        </LinearLayout>
    </ScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center|bottom">
            <Button
                android:id="@+id/youxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/anniu"
                />
        </LinearLayout>
        <Button
            android:id="@+id/tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:background="@drawable/tj"
            />
    </FrameLayout>
</RelativeLayout>